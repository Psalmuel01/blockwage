{
  "name": "blockwage-backend",
  "version": "0.1.0",
  "description": "BlockWage backend: Express + TypeScript APIs for Cronos x402 automated payroll (facilitator client integration stubs, scheduler hooks, and tests)",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "commonjs",
  "scripts": {
    "clean": "rimraf dist .tsbuildinfo",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "dev": "nodemon --watch 'src/**/*.ts' --exec ts-node -r tsconfig-paths/register src/index.ts",
    "lint": "eslint 'src/**/*.{ts,js}' --fix",
    "format": "prettier --write 'src/**/*.{ts,js,json,md}'",
    "test": "jest --runInBand",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://example.com/your-org/blockwage.git"
  },
  "keywords": [
    "cronos",
    "x402",
    "payroll",
    "stablecoin",
    "usdc",
    "facilitator",
    "express",
    "typescript"
  ],
  "author": "BlockWage Team",
  "license": "MIT",
  "engines": {
    "node": ">=16"
  },
  "dependencies": {
    "@crypto.com/facilitator-client": "latest",
    "axios": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "ethers": "^6.0.0",
    "express": "^4.18.2",
    "morgan": "^1.10.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.4.2",
    "@types/supertest": "^2.0.12",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^9.0.0",
    "jest": "^29.6.0",
    "nodemon": "^3.0.1",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/test"
    ],
    "testMatch": [
      "**/?(*.)+(spec|test).[tj]s?(x)"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageDirectory": "coverage",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ]
  },
  "files": [
    "dist"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
